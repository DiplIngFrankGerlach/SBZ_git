void HexPrinter::intToHex(int x,&char out[],int startIndex)
{
    for(var int i=0;i<8;i++)
    {
        var int nibble=(x>>(28-(i*4)))&0x0f;
        if(nibble<10)
        {
            out[i+startIndex]=cast(char,nibble+'0');
        } 
        else
        {
            out[i+startIndex]=cast(char,nibble+'a' - 10);
        }
    }
}



